{
    "extends": [
        "stylelint-config-standard",
        "stylelint-config-prettier"
    ],
    "rules": {
        "indentation": [
            4,
            {
                "baseIndentLevel": 1
            }
        ],
        "declaration-empty-line-before": [
            "never",
            {
                "ignore": [
                    "after-comment",
                    "after-declaration"
                ]
            }
        ],
        "no-descending-specificity": 0
    }
}